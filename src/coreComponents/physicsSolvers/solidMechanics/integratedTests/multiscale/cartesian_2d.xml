<?xml version="1.0" ?>

<Problem>

  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">

    <SolidMechanicsLagrangianSSLE
      name="mechSolver"
      timeIntegrationOption="QuasiStatic"
      discretization="FE1"
      logLevel="1"
      targetRegions="{ region }"
      solidMaterialNames="{ rock }">
      <NonlinearSolverParameters
        newtonTol="1e-2"
        newtonMaxIter="2"
        lineSearchAction="None"
        lineSearchMaxCuts="1"
        maxTimeStepCuts="1"
      />
      <!-- Expose all available multiscale parameters -->
      <LinearSolverParameters
        solverType="gmres"
        krylovTol="1e-8"
        krylovMaxIter="500"
        preconditionerType="multiscale"
        logLevel="1"
        multiscaleBasisType="msrsb"
        multiscaleMaxLevels="2"
        multiscaleMinLocalDof="0"
        multiscaleMinGlobalDof="0"
        multiscaleNumSmootherSweeps="1"
        multiscalePreOrPostSmoothing="both"
        multiscaleSmootherType="l1-jacobi"
        multiscaleBoundarySets="{xneg,xpos,yneg,ypos,zneg,zpos}"
        multiscaleDebugLevel="4"
        multiscaleCoarseType="direct"
        multiscaleCoarseningPartitionType="metis"
        multiscaleCoarseningRatio="4"
        multiscaleCoarseningMetisMethod="kway"
        multiscaleCoarseningMetisUfactor="30"
        multiscaleMsrsbMaxIter="100"
        multiscaleMsrsbTolerance="1e-2"
        multiscaleMsrsbRelaxation="0.6666666666666666"
        multiscaleCheckFrequency="1"
      />
    </SolidMechanicsLagrangianSSLE>

  </Solvers>

  <Mesh>
    <InternalMesh
      name="mesh"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 100 }"
      yCoords="{ 0, 1 }"
      zCoords="{ 0, 100 }"
      nx="{ 2 }"
      ny="{ 1 }"
      nz="{ 2 }"
      cellBlockNames="{ hex }"/>
  </Mesh>

  <Events
    maxTime="10.0">

    <PeriodicEvent
      name="solverApplications"
      forceDt="1.0"
      target="/Solvers/mechSolver"/>

    <PeriodicEvent
      name="outputs"
      timeFrequency="1.0"
      targetExactTimestep="1"
      target="/Outputs/vtkOutput"/>

  </Events>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion
      name="region"
      cellBlocks="{ hex }"
      materialList="{ rock }"/>
  </ElementRegions>

  <Constitutive>
    <ElasticIsotropic
      name="rock"
      defaultDensity="2700"
      defaultYoungModulus="1e9"
      defaultPoissonRatio="0.25"/>
  </Constitutive>

  <FieldSpecifications>

    <FieldSpecification
      name="x-roller"
      objectPath="nodeManager"
      fieldName="TotalDisplacement"
      component="0"
      scale="0.0"
      setNames="{ xneg, xpos }"/>

    <FieldSpecification
      name="y-roller"
      objectPath="nodeManager"
      fieldName="TotalDisplacement"
      component="1"
      scale="0.0"
      setNames="{ yneg, ypos }"/>

    <FieldSpecification
      name="z-roller"
      objectPath="nodeManager"
      fieldName="TotalDisplacement"
      component="2"
      scale="0.0"
      setNames="{ zneg }"/>

    <FieldSpecification
      name="z-compression"
      objectPath="nodeManager"
      fieldName="TotalDisplacement"
      component="2"
      functionName="z-comp"
      setNames="{ zpos }"/>

  </FieldSpecifications>

  <Functions>
    <TableFunction
      name="z-comp"
      inputVarNames="{ time }"
      coordinates="{ 0.0, 10.0 }"
      values="{ 0.0, -1.0 }"
      interpolation="linear"/>
  </Functions>

  <Outputs>
    <VTK
      name="vtkOutput"
      plotFileRoot="cartesian_2d"/>
  </Outputs>
</Problem>
